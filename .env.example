# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# Google AI (Gemini) - Required for AI tutor
GOOGLE_GENERATIVE_AI_API_KEY=your-gemini-api-key

# Sentry Error Monitoring (Optional)
SENTRY_DSN=
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_ORG=
SENTRY_PROJECT=

# WalletConnect Project ID (Optional - for wallet connections)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=

# Email (Resend) - Required for email notifications
# Get your API key at https://resend.com
RESEND_API_KEY=
EMAIL_FROM=CryptoCode <noreply@cryptocode.dev>

# Internal API Key (for server-to-server communication, e.g., cron jobs)
INTERNAL_API_KEY=

# CertificateNFT Contract Addresses
NEXT_PUBLIC_CERTIFICATE_NFT_SEPOLIA=
NEXT_PUBLIC_CERTIFICATE_NFT_MAINNET=

# Deployment Configuration (for deploying contracts)
DEPLOYER_PRIVATE_KEY=
SEPOLIA_RPC_URL=
MAINNET_RPC_URL=
ETHERSCAN_API_KEY=
CERTIFICATE_METADATA_BASE_URI=https://your-app-domain.com
CERTIFICATE_MINTER_ADDRESS=

# Contract Verification (Basescan)
BASESCAN_API_KEY=

# Social Account Verification OAuth
# Twitter/X OAuth 2.0 (Get from https://developer.twitter.com/en/portal/dashboard)
TWITTER_CLIENT_ID=your-twitter-client-id
TWITTER_CLIENT_SECRET=your-twitter-client-secret

# GitHub OAuth (Get from https://github.com/settings/developers)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Discord OAuth (Get from https://discord.com/developers/applications)
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret

# App URL (for OAuth redirects)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# hCaptcha Configuration (Get from https://www.hcaptcha.com/)
# Required for CAPTCHA protection on forms
NEXT_PUBLIC_HCAPTCHA_SITE_KEY=your-hcaptcha-site-key
HCAPTCHA_SECRET_KEY=your-hcaptcha-secret-key
